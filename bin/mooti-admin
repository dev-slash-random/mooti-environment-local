#!/usr/bin/env php
<?php

$autoloadLocations = [
	__DIR__ . '/../../../autoload.php',
	__DIR__ . '/../../autoload.php',
	__DIR__ . '/../vendor/autoload.php',
	__DIR__ . '/vendor/autoload.php'
];

$found = false;
foreach ($autoloadLocations as $autoloadLocation) {
    if (file_exists($autoloadLocation)) {
        require_once $autoloadLocation;
        $found = true;
        break;
    }
}

if(!$found) {
	fwrite(STDERR, PHP_EOL.'cannot find autoload file'.PHP_EOL.PHP_EOL);
}

use Mooti\Console\Command\Repository\UpdateRepositoryCommand;
use Symfony\Component\Console\Application;

$application = new Application('Mooti Admin', '0.0');
$application->add(new UpdateRepositoryCommand());
$application->run();
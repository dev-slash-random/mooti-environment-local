#!/usr/bin/env php
<?php

$autoloadLocations = [
	__DIR__ . '/../../../autoload.php',
	__DIR__ . '/../../autoload.php',
	__DIR__ . '/../vendor/autoload.php',
	__DIR__ . '/vendor/autoload.php'
];

$found = false;
foreach ($autoloadLocations as $autoloadLocation) {
    if (file_exists($autoloadLocation)) {
        require_once $autoloadLocation;
        $found = true;
        break;
    }
}

if(!$found) {
	fwrite(STDERR, PHP_EOL.'cannot find autoload file'.PHP_EOL.PHP_EOL);
}

use Mooti\Console\Command\Repository\AddRepositoryCommand;
use Mooti\Console\Command\System\InitialiseSystemCommand;
use Symfony\Component\Console\Application;

$mootiConfig = dirname($autoloadLocation).'/../mooti.json';

$application = new Application();
$application->add(new AddRepositoryCommand($mootiConfig));
$application->add(new InitialiseSystemCommand($mootiConfig));
$application->run();
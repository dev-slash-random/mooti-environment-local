<Directory /vagrant/services/>
    Require all granted
    Options Indexes FollowSymlinks
    AllowOverride None
</Directory>

<VirtualHost *:80>

    ServerName dev.mooti.local
    ServerAlias *.mooti-service.dev.local
    ServerAlias *.mooti-service.dev.<%= @apache_domain %>
    
    account.mooti-service.dev.generate4schools.co.uk

    DocumentRoot /repositories/mooti/services
    VirtualDocumentRoot /repositories/mooti/services/%1/public

    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ /%{HTTP_HOST}/public/index.php [QSA,L]

    LogLevel info
    ErrorLog /var/log/apache2/mooti.dev.local.error.log

</VirtualHost>